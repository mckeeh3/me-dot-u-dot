<?xml version="1.0" encoding="utf-8"?>
<!--
    This is a logback include file.

    Add here the loggers you would like to have for your application during development and testing.
    To define loggers for production mode use 'include-loggers.xml'

    The loggers you define inside the <included> tag will be added to the final log configuration
    when the application runs.
-->
<included>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
            ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <Pattern>%yellow(%d{YYYY-MM-dd HH:mm:ss.SSS}) %blue(%-5level) %green(%-15.15thread) %cyan(%logger{25}): %msg%n</Pattern>
        </encoder>
    </appender>

    <timestamp key="startTime" datePattern="yyyy-MM-dd-HH-mm-ss" />
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/tmp/me-dot-u-dot-${startTime}.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-15.15thread %logger{25}: %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Use TRACE level for Akka Lang Chain 4j HTTP client -->
    <logger name="kalix.runtime.agent.AkkaLangChain4jHttpClient" level="trace" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- Use DEBUG level for Kalix runtime agent -->
    <logger name="kalix.runtime.agent" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </logger>

    <logger name="com.example" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </logger>

    <logger name="com.example.application.GameActionLogEntity" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </logger>

    <logger name="com.example.application.SessionMemoryConsumer" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</included>
